{% extends "base.html.twig" %}

{% block showcase %}
    {{ message_contact }}
    <section id="showcase" class="d-flex justify-content-center align-items-center" style="height: 35vh;">
        <div id="overlay" style="height: 35vh;"></div>
        <div id="header" class="container text-white text-center">
            <h1 class="display-3">Profile Dashboard</h1>
            <p class="lead d-none d-md-block py-5">Ici vous pouvez change vos informations</p>
        </div>
    </section>
{% endblock %}



{% block body %}
    {% include 'messages.html.twig' %}
    <section class="p-5" style="height: 50vh;">
        <div class="container py-5">
            <form action="index.php?action=editProfile" method="POST">
                <div class="input-group justify-content-center">
                    <div class="col-md-5">

                        <input type="hidden" name="token" value="{{ get_token() }}">
                        <div class="form-group">
                            <input type="text" name="txtLastName" class="form-control" placeholder="Nom *"
                                   value="{{user.last_name}}"/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="txtFirstName" class="form-control" placeholder="Prenom *"
                                   value="{{user.first_name}}"/>
                        </div>
                        <div class="form-group">
                            <input type="email" name="txtEmail" class="form-control" placeholder="Email *"
                                   value="{{ user.email }}"/>
                        </div>

                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="password" id="inputPassword" name="password" class="form-control" aria-describedby="helpBlock"
                                   placeholder="Mot de passe *"> <span id="helpBlock">Veuilez laiser vide si vous voulais garder votre ancien mot de passe</span>
                        </div>
                        <div class="form-group">
                            <form action="UploadContent.php" method="POST" enctype="multipart/form-data">
                                File:
                                <input type="file" name="image"> <input type="submit" value="Upload">
                            </form>
                        </div>

                    </div>
                    <div class="col-md-6 d-flex pt-3 justify-content-center align-items-center">
                        <div class="form-group">
                            <input type="submit" name="btnSubmit" class="btn btn-primary"
                                   value="Sauvgarder les modifications"/>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>

{% endblock %}