{% extends "base.html.twig" %}

{% block showcase %}
    <section id="showcase" class="d-flex justify-content-center align-items-center" style="height: 40vh;">
        <div id="overlay" style="height: 40vh;"></div>

        <div id="header" class="container text-white text-center">
            <h1 class="display-3">Création de compte</h1>
            <p class="lead d-none d-md-block py-5">Veuillez remplir chacune des sections et cliquer sur « Envoyer »
                lorsque vous avez terminé.</p>
        </div>
    </section>
{% endblock %}

{% block body %}
    <section class="p-5">
        <div class="container text-white text-center py-5">
            <form action="index.php?action=registerUser" method="POST">
                <div class="input-group justify-content-center">
                    <div class="col-md-5">
                        <input type="hidden" name="token" value="{{ get_token() }}">
                        <div class="form-group">
                            <input type="text" name="Nom" class="form-control" placeholder="Nom *"
                                   value="{{ request_old('post', 'Nom') }}"/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="Prénom" class="form-control" placeholder="Prénom *"
                                   value="{{ request_old('post', 'Prénom') }}"/>
                        </div>
                        <div class="form-group">
                            <input type="email" name="email" class="form-control" placeholder="Email *"
                                   value="{{ request_old('post', 'Email') }}"/>
                        </div>
                        <div class="form-group">
                            <input type="password" id="inputPassword" name="MotDePasse" class="form-control"
                                   placeholder="Mot de passe *">
                        </div>
                    </div>
                    <div class="col-md-5 d-flex justify-content-center align-items-center">
                        <div class="form-group">
                            <input type="submit" name="register" class="btn btn-primary" value="Envoyer"/>
                        </div>

                    </div>
                </div>
            </form>

        </div>
        <p class="text-center text-black-50">Déja un compte? <a href="index.php?action=login">Sign in</a></p>
    </section>
{% endblock %}