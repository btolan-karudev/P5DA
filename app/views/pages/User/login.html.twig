<body id="login" class="text-center bg-light">

{% block login %}
<form class="form-signin" action="index.php?action=login" method="POST">
    <a href="index.php?action=home">
        <img class="mb-4" src="images/favicon.ico" alt="" width="72" height="72">
    </a>

    <input type="hidden" name="token" value="{{ get_token() }}">
    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

    {% include 'User/messages.html.twig' %}

    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="inputEmail" name="email"
           class="form-control {{ (email_err is not empty) ? 'is-invalid' : '' }}" placeholder="Votre email"
           value="{{ request_old('post', 'email') }}">
    <span class="invalid-feedback">{{ email_err }}</span>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword"  name="MotDePasse"
           class="form-control {{ (password_err is not empty) ? 'is-invalid' : '' }}"
           placeholder="Votre mot de passe" value="{{ password }}">
    <span class="invalid-feedback">{{ password_err }}</span>
    <div class="checkbox mb-3">

        <input type="checkbox" value="remember-me"> Se souvenir de moi

        <p>
            <a href="index.php?action=requestReset"> Mot de passe oubli√©
            </a>
        </p>

    </div>
    <button class="btn btn-lg btn-outline-dark btn-block" type="submit">Sign in</button>
    <span class="my-5">or</span>

    <a class="btn btn-lg btn-outline-info btn-block" href="index.php?action=showRegisterForm">Inscription</a>

    <a href="https:\\www.tolan.me">
        <p class="mt-5 mb-3 text-muted">&copy; 2020 BenjiCodeur</p>
    </a>
</form>
