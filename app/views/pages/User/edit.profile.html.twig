{% extends "base.html.twig" %}

{% block showcase %}
    {{ message_contact }}
    <section id="showcase" class="d-flex justify-content-center align-items-center" style="height: 35vh;">
        <div id="overlay" style="height: 35vh;"></div>
        <div id="header" class="container text-white text-center">
            <h1 class="display-3">Profil Dashboard</h1>
            <p class="lead d-none d-md-block py-5">Ici vous pouvez changer vos informations</p>
        </div>
    </section>
{% endblock %}

{% block body %}

    <section class="p-5" style="height: 50vh;">
        <div class="container py-5">
            <form action="index.php?action=editProfile" method="POST" enctype="multipart/form-data">
                <div class="input-group justify-content-center">
                    <div class="col-md-5">

                        <input type="hidden" name="token" value="{{ get_token() }}">
                        <div class="form-group">
                            <input type="text" name="txtLastName" class="form-control" placeholder="Nom *"
                                   value="{{ user.last_name }}"/>
                        </div>

                        <div class="form-group">
                            <input type="email" name="txtEmail" class="form-control" placeholder="Email *"
                                   value="{{ user.email }}"/>
                        </div>
                        <div class="form-group">
                            <input type="password" id="inputPassword" name="password" class="form-control"
                                   aria-describedby="helpBlock"
                                   placeholder="Mot de passe *"> <span id="helpBlock">Veuilez laisser vide si vous voulez garder votre ancien mot de passe!</span>
                        </div>

                    </div>

                    <div class="col-md-6">

                        <div class="form-group">
                            <input type="text" name="txtFirstName" class="form-control" placeholder="PrÃ©nom *"
                                   value="{{ user.first_name }}"/>
                        </div>
                        {% if user.user_photo_path is not null %}
                            <div class="d-flex bd-highlight mb-3">

                                <div class="form-group p-2 bd-highlight">
                                    <div class="card" style="width: 6rem;">
                                        <img class="card-img-top" src="/images/{{ user.user_photo_path }}"
                                             alt="Card image cap">
                                    </div>
                                </div>

                                <div class="form-group p-2 bd-highlight">
                                    Modifier Image:
                                    <div>

                                        <input type="file" name="userImage">
                                    </div>
                                </div>

                            </div>

                        {% else %}
                            <div class="form-group">
                                Upload Image:
                                <input type="file" name="userImage">
                            </div>
                        {% endif %}


                    </div>
                    <div class="col-md-6 d-flex pt-5 justify-content-center align-items-center">
                        <div class="form-group">
                            <input type="submit" name="btnSubmit" class="btn btn-primary"
                                   value="Sauvegarder les modifications"/>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>

{% endblock %}