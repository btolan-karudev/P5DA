{% block login %}
    <!doctype html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
        <meta name="generator" content="Jekyll v3.8.5">
        <title>Signin Template Â· Bootstrap</title>
        <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">
        <link rel="stylesheet" href="css/style.css"/>

        <style>
            html,
            body {
                height: 100%;
            }

            .bd-placeholder-img {
                font-size: 1.125rem;
                text-anchor: middle;
                -webkit-user-select: none;
                -moz-user-select: none;
                -ms-user-select: none;
                user-select: none;
            }

            @media (min-width: 768px) {
                .bd-placeholder-img-lg {
                    font-size: 3.5rem;
                }
            }
        </style>
    </head>
    <body id="login" class="text-center bg-light">


    <form class="form-signin" action="index.php?action=login" method="POST">
        <a href="index.php?action=home">
            <img class="mb-4" src="images/favicon.ico" alt="" width="72" height="72">
        </a>

        <input type="hidden" name="token" value="{{ get_token() }}">
        <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
        {% for message in flash_messages %}
            <div class="h3 alert alert-info text-center alert-dismissible fade show">
                {{ message }}
            </div>
        {% endfor %}
        {% include 'messages.html.twig' %}
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" id="inputEmail" name="email"
               class="form-control {{ (email_err is not empty) ? 'is-invalid' : '' }}" placeholder="Votre email"
               value="{{ request_old('post', 'email') }}">
        <span class="invalid-feedback">{{ email_err }}</span>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" name="password"
               class="form-control {{ (password_err is not empty) ? 'is-invalid' : '' }}"
               placeholder="Votre mot de passe" value="{{ password }}">
        <span class="invalid-feedback">{{ password_err }}</span>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Se souvenir de moi
            </label>
            <p>
                <a href="index.php?action=lostPass"> Mot de passe oublie
                </a>
            </p>

        </div>
        <button class="btn btn-lg btn-outline-dark btn-block" type="submit">Sign in</button>
        <span class="my-5">or</span>

        <a class="btn btn-lg btn-outline-info btn-block" href="index.php?action=showRegisterForm">Inscription</a>

        <a href="https:\\www.tolan.me">
            <p class="mt-5 mb-3 text-muted">&copy; 2020 BenjiCodeur</p>
        </a>
    </form>

    </body>
    </html>


{% endblock %}